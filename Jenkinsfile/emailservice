pipeline {
    agent any

    tools {
        jdk 'jdk17'
    }

    environment {
        SCANNER_HOME = tool 'sonar-scanner'
        DOCKER_NAME  = 'harishnshetty/emailservice'
        IMAGE_NAME   = 'emailservice'
    }

    stages {
        stage("Clean Workspace") {
            steps { cleanWs() }
        }

        stage("Git Checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/harishnshetty/Google-microservices-devsecops-project.git'
            }
        }

        // --- Bandit (Python SAST) ---
        stage("Bandit Security Scan") {
            steps {
                dir('src/emailservice') {
                    sh '''
                    python3 -m pip install --upgrade pip
                    pip3 install bandit
                    bandit -r . -f json -o bandit-report.json || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/bandit-report.json'
                }
            }
        }

        // --- SonarQube Analysis ---
        stage("SonarQube Analysis") {
            steps {
                dir('src/emailservice') {
                    withSonarQubeEnv('sonar-server') {
                        sh '''
                        $SCANNER_HOME/bin/sonar-scanner \
                          -Dsonar.projectKey=emailservice \
                          -Dsonar.projectName=emailservice \
                          -Dsonar.sources=. \
                          -Dsonar.language=py
                        '''
                    }
                }
            }
        }

        // --- Quality Gate ---
        stage("Quality Gate") {
            steps {
                script {
                    timeout(time: 3, unit: 'MINUTES') {
                        waitForQualityGate abortPipeline: true, credentialsId: 'sonar-token'
                    }
                }
            }
        }

        // --- Install Dependencies ---
        stage("Install Dependencies") {
            steps {
                dir('src/emailservice') {
                    sh 'pip3 install -r requirements.txt'
                }
            }
        }

        // --- Unit Tests ---
        stage("Unit Tests") {
            steps {
                dir('src/emailservice') {
                    sh 'pytest --junitxml=test-results/results.xml || true'
                }
            }
            post {
                always {
                    junit 'src/emailservice/test-results/*.xml'
                }
            }
        }

        // --- Safety Dependency Scan ---
        stage("Safety Dependency Scan") {
            steps {
                dir('src/emailservice') {
                    sh '''
                    pip3 install safety
                    safety check -r requirements.txt --full-report > safety-report.txt || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/safety-report.txt'
                }
            }
        }

        // --- Trivy FS Scan ---
        stage("Trivy File Scan") {
            steps {
                dir('src/emailservice') {
                    sh '''
                    trivy fs . --severity CRITICAL,HIGH --exit-code 1 \
                      --scanners vuln,misconfig,secret > trivy-fs-report.txt || true
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/trivy-fs-report.txt'
                }
            }
        }

        // --- Build Docker Image ---
        stage("Build Docker Image") {
            steps {
                dir('src/emailservice') {
                    script {
                        env.IMAGE_TAG = "$DOCKER_NAME:${BUILD_NUMBER}"
                        sh "docker rmi -f $IMAGE_NAME ${env.IMAGE_TAG} || true"
                        sh "docker build -t $IMAGE_NAME ."
                        sh "docker tag $IMAGE_NAME ${env.IMAGE_TAG}"
                    }
                }
            }
        }

        // --- Push Docker Image ---
        stage("Push to DockerHub") {
            steps {
                dir('src/emailservice') {
                    withCredentials([string(credentialsId: 'docker-cred', variable: 'dockerpwd')]) {
                        sh '''
                        docker login -u harishnshetty -p ${dockerpwd}
                        docker push ${IMAGE_TAG}
                        docker tag ${IMAGE_NAME} ${DOCKER_NAME}:latest
                        docker push ${DOCKER_NAME}:latest
                        '''
                    }
                }
            }
        }

        // --- Trivy Image Scan ---
        stage("Trivy Scan Image") {
            steps {
                dir('src/emailservice') {
                    sh '''
                    trivy image -f json -o trivy-image-email.json ${IMAGE_TAG}
                    trivy image -f table -o trivy-image-email.txt ${IMAGE_TAG}
                    '''
                }
            }
            post {
                always {
                    archiveArtifacts 'src/emailservice/trivy-image-email.*'
                }
            }
        }
    }

    // --- Notifications ---
    post {
        always {
            dir('src/emailservice') {
                script {
                    def buildStatus = currentBuild.currentResult
                    def buildUser = currentBuild.getBuildCauses('hudson.model.Cause$UserIdCause')[0]?.userId ?: 'Github User'

                    emailext (
                        subject: "Pipeline ${buildStatus}: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                        body: """
                            <p>Emailservice Google-Shop DevSecOps pipeline status.</p>
                            <p>Youtube Link :- https://www.youtube.com/@devopsHarishNShetty </p>
                            <p>Project: ${env.JOB_NAME}</p>
                            <p>Build Number: ${env.BUILD_NUMBER}</p>
                            <p>Build Status: ${buildStatus}</p>
                            <p>Started by: ${buildUser}</p>
                            <p>Build URL: <a href="${env.BUILD_URL}">${env.BUILD_URL}</a></p>
                        """,
                        to: 'harishn662@gmail.com',
                        from: 'harishn662@gmail.com',
                        mimeType: 'text/html',
                        attachmentsPattern: 'bandit-report.json,safety-report.txt,trivy-fs-report.txt,trivy-image-email.*'
                    )
                }
            }
        }
    }
}
